{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": false,
    "preserveConstEnums": true,
    "rootDir": "app",
    "outDir": "build",
    "sourceMap": true,
    "jsx": "react",
    "experimentalDecorators": true
  },
  "exclude": [
    "node_modules",
    "build",
    "server"
  ]
}
